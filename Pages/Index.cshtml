@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="row">
    <div class="col-md-12">
        @if (!User.Identity.IsAuthenticated)
        {
            <a asp-action="Login" asp-controller="Account" class="btn btn-default">Log In with Keycloak</a>
        }
        else
        {
            <div class="row">
                
                <div class="col-md-10">
                    <h4>Keycloak Name :  @Model.KeycloakName</h4>
                    <br />
                    <h4>Keycloak Email: @Model.KeycloakEmail</h4>
                    <br />
                    <h4>Keycloak Preffered Username: @Model.KeycloakPreferredUsername</h4>
                    <br />
                    <h4>Keycloak Given Name: @Model.KeycloakGivenName</h4>
                    <br />
                    <h4>Keycloak Family Name: @Model.KeycloakFamilyName</h4>
                </div>
            </div>
        }
    </div>
</div>
